---
import PostMeta from '~/components/PostMeta.astro'
import type { Post } from '~/types'

interface Props {
  post: Post
  mode?: 'list' | 'detail'
}

const { post, mode = 'detail' } = Astro.props
---

<article class:list={['prose', mode === 'list' ? 'post-card' : 'post-article']}>
  <PostMeta post={post} mode={mode} />
  <slot />
</article>
